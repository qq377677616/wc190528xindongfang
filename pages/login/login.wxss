/* pages/login/login.wxss */
.container{
   padding: 28rpx 0 140rpx;
}
.content{
   width: 90%;
   margin: 0 auto;
   background: #fafafa;
   box-shadow: 0px 0px 20px #e5e5ea; 
   border-radius: 10rpx;
   padding: 70rpx 40rpx;
   box-sizing: border-box;
}
.accout,.pwd{
   width: 100%;
   position: relative;
   margin-bottom: 35rpx;
}
.pwd{
   margin-bottom: 50rpx;
}
.accout span{
   position: absolute;
   top: 50%;
   left: 35rpx;
   transform: translateY(-50%);
   font-size: 30rpx;
}
.pwd span{
   position: absolute;
   top: 50%;
   left: 35rpx;
   transform: translateY(-50%);
   font-size: 30rpx;
}
.input{
   width: 100%;
   height: 105rpx;
   background: #fff;
   padding-left: 130rpx;
   box-sizing: border-box;
   border-radius: 15rpx;
}
.placeholder{
   font-size: 26rpx;
   color: #a3a3a3;
}
.cont{
   overflow: hidden;
   width: 100%;
   margin-bottom: 50rpx;
}
.cont view{
   float: left;
   width: 50%;
   text-align: center;
   font-size: 30rpx;
}
.cont .right{
   border-left: 1px solid #1e1e1e;
   box-sizing: border-box;
}
.login button{
   width: 100%;
   background: #01c599;
   color: #fff;
   border: none;
}
.logon{
   width: 90%;
   margin: 0 auto;
   text-align: right;
   margin-top: 60rpx;
   font-size: 30rpx;
}
button::after{
   border: none;
}
button{
   margin-top: 100rpx;
   background: #04c79d;
   color: #fff;
   width: 50%;
}