.payment{
   width: 100%;
   height: 100rpx;
   line-height: 100rpx;
   background: #01c498;
   color: #fff;
   text-align: center;
   position: fixed;
   bottom: 0;
   z-index: 10;
}
.submit{
   margin-top: 20rpx;
   padding-top: 20rpx;
   /* border-top: 1px solid #ddd; */
}
.submit button{
   width: 30%;
   height: 70rpx;
   line-height: 70rpx;
   font-size: 32rpx;
   margin: auto;
   background: #04c79d;
   color: #fff;
   border-radius: 25px;
}
.add{
   text-align: center;
}
.add  i{
   font-size: 60rpx;
   line-height: 90rpx;
   color: #04c79d;
   padding-right: 30rpx;
}
.guar{
   padding: 30rpx;
   box-sizing: border-box;
   width: 90%;
   margin: auto;
   font-size: 36rpx;
   color: #474747;
   font-weight: bold;
}
