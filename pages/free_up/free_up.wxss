.input input{
   display: inline-block;
   width: 70%;
   height: 85rpx;
   padding-left: 50rpx;
   box-sizing: border-box;
   font-size: 30rpx;
   color: #b1b1b1;
   vertical-align: middle;
}
.input .money{
   display: inline-block;
   width: 70%;
   height: 85rpx;
   box-sizing: border-box;
   font-size: 30rpx;
   color: #ff6e6e;
   vertical-align: middle;
   text-align: right;
}
.input picker{
   display: inline-block;
   width: 35%;
   vertical-align: middle;
   position: relative;
}
.dates{
   display: inline-block;
   width: 70% !important;
   vertical-align: middle;
   position: relative;
}
.picker{
   width: 100%;
   height: 85rpx;
   padding-left: 50rpx;
   padding-right: 30rpx;
   box-sizing: border-box;
   font-size: 30rpx;
   color: #b1b1b1;
   overflow: hidden;
   text-overflow:ellipsis;
   white-space: nowrap;
}

.input picker i{
   position: absolute;
   top: 50%;
   right: 10rpx;
   transform: translateY(-50%);
   color: #b1b1b1;
   font-size: 28rpx;
}
