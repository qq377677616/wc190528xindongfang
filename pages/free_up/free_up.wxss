page{
   width: 100%;
   height: 100%;
}
.container{
   background: #fafafa;
   padding: 28rpx 0 140rpx;
   overflow: scroll;
}
.content{
   width: 90%;
   /* height: 100%; */
   margin: 0 auto;
   margin-bottom: 30rpx;
   border-bottom: 2px solid #eee;
}
.input{
   width: 100%;
   height: 85rpx;
   line-height: 85rpx;
   position: relative;
   margin-bottom: 30rpx;
   border-radius: 15rpx;
   background: #fff;
   box-shadow: 0 0 40rpx #f3f4f5;
}
.input text{
   border-right: 1px solid #e5e5e5;
   font-size: 30rpx;
   color: #646464;
   padding: 0 45rpx 0 22rpx;
   vertical-align: middle;
}
