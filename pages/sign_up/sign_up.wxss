/* pages/sign_up/sign_up.wxss */
page{
   width: 100%;
   height: 100%;
}
.container{
   background: #fafafa;
   padding: 28rpx 0 140rpx;
   overflow: scroll;
}
.content{
   width: 90%;
   /* height: 100%; */
   margin: 0 auto;
   margin-bottom: 30rpx;
   border-bottom: 2px solid #eee;
}
.input{
   width: 100%;
   position: relative;
   margin-bottom: 30rpx;
}
.input i{
   position: absolute;
   top: 50%;
   left: 20rpx;
   transform: translateY(-50%);
   color: #01c599;
   font-size: 34rpx;
}
.input input{
   width: 100%;
   height: 85rpx;
   border-radius: 10rpx;
   background: #fff;
   padding-left: 70rpx;
   box-sizing: border-box;
   font-size: 30rpx;
   color: #b1b1b1;
}
.placeholder{
   font-size: 30rpx;
   color: #b1b1b1;
}
.section{
   width: 100%;
   position: relative;
   margin-bottom: 30rpx;
}
.section .icon-qizi{
   position: absolute;
   top: 50%;
   left: 20rpx;
   transform: translateY(-50%);
   color: #01c599;
   font-size: 34rpx;
}
.section .icon-fangkuang{
   position: absolute;
   top: 50%;
   left: 20rpx;
   transform: translateY(-50%);
   color: #e3e3e3;
   font-size: 34rpx;
}
.section .icon-xia{
   position: absolute;
   top: 50%;
   right: 30rpx;
   transform: translateY(-50%);
   color: #b1b1b1;
   font-size: 34rpx;
}
.picker{
   background: #fff;
   height: 85rpx;
   line-height: 85rpx;
   border-radius: 10rpx;
   padding-left: 70rpx;
   font-size: 30rpx;
   color: #b1b1b1;
}
.payment{
   width: 100%;
   height: 100rpx;
   line-height: 100rpx;
   background: #01c498;
   color: #fff;
   text-align: center;
   position: fixed;
   bottom: 0;
   z-index: 10;
}
.submit{
   margin-top: 20rpx;
   padding-top: 20rpx;
   /* border-top: 1px solid #ddd; */
}
.submit button{
   width: 30%;
   height: 70rpx;
   line-height: 70rpx;
   font-size: 32rpx;
   margin: auto;
   background: #04c79d;
   color: #fff;
   border-radius: 25px;
}
.add{
   text-align: center;
}
.add  i{
   font-size: 60rpx;
   line-height: 90rpx;
   color: #04c79d;
   padding-right: 30rpx;
}
