/* pages/userDetail/userDetail.wxss */
page{
   width: 100%;
   height: 100%;
}
.container{
   width: 100%;
   background: #fafafa;
   padding: 28rpx 30rpx 140rpx;
}
.addUser,.addGuar{
   width: 94%;
   margin: 0 auto;
   margin-bottom: 30rpx;
   padding: 60rpx 25rpx;
   font-size: 30rpx;
   border-radius: 10rpx;
   background: #fff;
   box-shadow: 0px 0px 20px #e6e8ee;
}
.addUser view{
   margin-bottom: 35rpx;
   display: flex;
}
.addGuar view{
    margin-bottom: 35rpx;
}
.addUser .left{
   line-height: 80rpx;
}
.addUser .right{
   flex: 1;
   display: flex;
}
.addUser .input{
   display: inline-block;
   width: 100%;
   height: 80rpx;
   border: 1px solid #ddd;
   border-radius: 10rpx;
   vertical-align: middle;
   padding-left: 20rpx;
   box-sizing: border-box;
}
.addGuar .input{
   display: inline-block;
   width: 60%;
   height: 80rpx;
   border: 1px solid #ddd;
   border-radius: 10rpx;
   vertical-align: middle;
   padding-left: 20rpx;
   box-sizing: border-box;
}
.submit button{
   width: 60%;
   height: 80rpx;
   line-height: 80rpx;
   margin-top: 50rpx;
   background: #06c99f;
   color: #fff;
   border-radius: 25px;
}
.kong{
   width: 20rpx;
}
.section{
   width:50%;
   border:1px solid #ddd;
   line-height:80rpx;
   height:80rpx;
   border-radius:10rpx;
   margin: 0 !important;
   box-sizing: border-box;
   flex: 1;
   position: relative;
}
.section picker{
   width: 100%;
   height: 100%;
   padding-left:10rpx;
   color: #bababa;
   position: absolute;
   z-index: 1;
}
.dao{
   position: absolute;
   right:0;
   top: 0;
   width: 65rpx;
   height: 80rpx;
   border-left: 1px solid #ddd;
   text-align: center;
}
.dao span{
   display: block;
   width: 0;
   height: 0;
   border-left: 7px solid transparent;
   border-right: 7px solid transparent;
   border-top: 10px solid #d6d6d6;
   position:absolute;
   top:50%;
   left:50%;
   transform:translate(-50%,-50%);
}