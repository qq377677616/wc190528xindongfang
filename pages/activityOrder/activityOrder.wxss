/* pages/activityOrder/activityOrder.wxss */
page{
   width: 100%;
   height: 100%;
}
.container{
   background: #fafafa;
   padding: 28rpx 0 140rpx;
}
.body{
   width: 100%;
   height: 100%;
}
/* 线上订单 */
.content1{
   width: 100%;
   padding: 0 30rpx;
   box-sizing: border-box;
   overflow-y: scroll;
}
.content1 .box{
   background: #fff;
   box-shadow: 0px 0px 20px #e5e5ea; 
   border-radius: 10rpx;
   padding: 30rpx;
   box-sizing: border-box;
   margin-bottom: 20rpx;
}
.content1 .box .header{
   font-size: 30rpx;
   display: flex;
   padding-bottom: 10rpx;
}
.header view{
   flex: 1;
}
.header .right{
   text-align: right;
   color: #ff7477;
}
.bodys{
   width: 100%;
   overflow: hidden;
   display: flex;
}
.bodys .body_1{
   width: 200rpx;
}
.body_1 image{
   width: 100%;
}
.bodys .body_2{
   flex: 1;
   padding-left: 10rpx;
}
.body_2 view{
   margin-bottom: 10rpx;
}
.body_2 .title{
   font-size: 28rpx;
   height: 80rpx;
   line-height: 40rpx;
   overflow: hidden;
}
.body_2 .bmf{
   font-size: 28rpx;
   color: #959595;
}
.body_2 .xc{
   font-size: 28rpx;
   color: #959595;
}
.btn{
   width: 100%;
   overflow: hidden;
}
.btn button{
   float: right;
   margin-left: 10rpx;
}
.refund::after{
   border:none;
}
.refund{
   background: #fff;
   border: 1px solid #c0c0c0;
   color: #c0c0c0;
   border-radius: 25px;
   height: 70rpx;
   line-height: 70rpx;
   padding: 0 50rpx;
   font-size: 30rpx;
}