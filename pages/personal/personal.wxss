/* pages/personal/personal.wxss */
page{
   width: 100%;
   height: 100%;
   background: #fafafa;
}
.container{
   padding: 0;
}
.header{
   width: 100%;
   height: 450rpx;
   text-align: center;
   position: relative;
}
.header .bg{
   width: 100%;
}
.box{
   width: 220rpx;
   position: absolute;
   top: 75rpx;
   left: 50%;
   transform: translateX(-50%);
}

.header .userImg{
   width: 220rpx;
   height: 220rpx;
   border-radius: 50%;
}
.header .getAvtar{
   width: 220rpx;
   height: 220rpx;
   line-height: 220rpx;
   position: absolute;
   top: 0;
   left: 50%;
   border-radius: 50%;
   transform: translateX(-50%);
}
.nikename{
   padding-top: 20rpx;
   font-size: 24rpx;
   color: #fff;
}
.tabs{
   position: absolute;
   bottom: -70rpx;
   left: 50%;
   transform: translateX(-50%);
   width: 84%;
   height: 120rpx;
   background: #fff;
   display: flex;
   border-radius: 20rpx;
}
.tabs view{
   flex: 1;
   text-align: center;
   font-size: 20rpx;
   color: #9e9e9e;
}
.tabs view image{
   width: 50rpx;
   height: 50rpx;
   padding-top: 18rpx;
}
.qizi{
   width: 42rpx !important;
}
.content{
   width: 84%;
   position: absolute;
   left: 8%;
   top: 620rpx;
   background: #fff;
   border-radius: 20rpx;
}
.content .li{
   width: 85%;
   margin: auto;
   line-height: 110rpx;
   font-size: 32rpx;
   border-bottom: 1px solid #ececec;
   position: relative;
   color: #7b7b7b;
}
.content .li:last-child{
   border-bottom: none;
}
.content .li image{
   width: 50rpx;
   vertical-align: middle;
}
.content .li .you{
   width: 40rpx;
   vertical-align: middle;
   position: absolute;
   top: 50%;
   right: 0;
   transform: translateY(-50%)
}
