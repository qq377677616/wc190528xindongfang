/* components/alerts/alerts.wxss */
.body{
   width: 100%;
   height: 100%;
   position: fixed;
   top: 0;
   left: 0;
   z-index: 100;
}
.zhezhao{
   width: 100%;
   height: 100%;
   position: fixed;
   top: 0;
   left: 0;
   background: black;
   opacity: 0.3;
}
.alert{
   width: 70%;
   background: #fff;
   position:fixed;
   top:50%;
   left:50%;
   transform:translate(-50%,-50%);
   padding:60rpx 60rpx 0;
   box-sizing:border-box;
   border-radius: 20rpx;

}
.alert .gou{
   text-align:center;
   margin-bottom: 40rpx;
   font-size: 30rpx;
}
.alert .bindSuccess{
   text-align:center;
   margin-bottom: 80rpx;
   font-size: 30rpx;
}
.alert .comfirm{
   text-align:center;
   margin-bottom: 100rpx;
   font-size: 30rpx;
}
.alert image{
   width: 140rpx;
}
.alert button{
   width: 80%;
   height: 80rpx;
   line-height: 80rpx;
   font-size: 28rpx;
   background: #04c99e;
   color: #fff;
   border-radius: 25px;
   box-shadow: 0px 0px 20px #d2dad9;
}